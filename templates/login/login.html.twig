{% extends 'base.html.twig' %}
{% block body %}
	<head>

		{{ include('partials/title-meta.html.twig', {title: 'Login'}) }}

		{{ include('partials/head-css.html.twig') }}

	</head>

	<body class="authentication-bg">
		<div class="account-pages my-5 pt-sm-5">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="text-center">
							<a href="{{ path('app_login') }}" class="mb-5 d-block auth-logo"></a>
						</div>
					</div>
				</div>
				<div class="row align-items-center justify-content-center">
					<div class="col-md-8 col-lg-6 col-xl-5">
						<div class="card">

							<div class="card-body p-4">
								<div class="text-center mt-2">
									<h5 class="text-primary">Welcome Back !</h5>
									<p class="text-muted">Sign in to continue to CSIT LMS.</p>
								</div>
								<div class="p-2 mt-4">
									<form method="post">
										{% if error %}
											<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
										{% endif %}
										<div class="mb-3">
											<label class="form-label" for="username">Username</label>
											<input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" placeholder="Enter username" required autofocus>
										</div>

										<div class="mb-3">
											<label class="form-label" for="userpassword">Password</label>
											<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" placeholder="Enter password" required>
											<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
											<div class="float-start mb-3 mt-2">
												<a href="#" class="text-muted">Forgot password?</a>
											</div>
										</div>

										<div class="mt-3 text-end">
											<button class="btn btn-primary w-sm waves-effect waves-light" type="submit">Log In</button>
										</div>
										<div class="mt-4 text-center">
											<p class="mb-0">Don't have an account ?
												<a href="{{ path('app_register') }}" class="fw-medium text-primary">
													Signup
												</a>
											</p>
										</div>
									</form>
								</div>

							</div>
						</div>

						<div class="mt-5 text-center">
							<p>©
								{{ "now"|date("Y") }}
								© CSIT LMS. Crafted with
								{# <i class="mdi mdi-heart text-danger"></i> #}
								ABensing</p>
						</div>

					</div>
				</div>
				<!-- end row -->
			</div>
			<!-- end container -->
		</div>

		{{ include('partials/vendor-scripts.html.twig') }}

		<!-- App js 
																																																									        <script src="/js/app.js"></script>-->

	</body>
{% endblock %}
